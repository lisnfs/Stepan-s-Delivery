{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "strict": true,
    "strictFunctionTypes": false,
    "module": "commonjs",
    "target": "es5",
    "importHelpers": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "paths": {
      "@store/*": [
        "store/*"
      ],
      "@store": [
        "store/index"
      ],
      "@models": [
        "models/index"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/**/*",
    "./public/**/*"
  ]
}
